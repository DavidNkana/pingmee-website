# Enable the rewriting engine
RewriteEngine On
RewriteBase /

# 1. Remove .html from the URL 
# Checks if the requested file without the .html extension exists
RewriteCond %{REQUEST_FILENAME} !-f
# Checks if the requested file plus .html extension DOES exist
RewriteCond %{REQUEST_FILENAME}.html -f
# Internally rewrites the clean URL (/contact) to the file (/contact.html)
RewriteRule ^([^\.]+)$ $1.html [NC,L]